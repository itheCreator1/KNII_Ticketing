<%- include('../../partials/header') %>

<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold text-gray-900 mb-8"><%= t('floors:createFloor') %></h1>

  <%- include('../../partials/flash') %>

  <div class="bg-white rounded-lg shadow p-6">
    <form method="POST" action="/admin/floors">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <!-- Floor Name -->
      <div class="mb-6">
        <label for="name" class="block text-sm font-medium text-gray-900 mb-2">
          <%= t('floors:fields.name') %> <span class="text-red-600">*</span>
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          maxlength="50"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="<%= t('floors:placeholders.name') %>"
        >
        <p class="mt-1 text-sm text-gray-500">
          <%= t('common:maxChars', { count: 50 }) %>
        </p>
      </div>

      <!-- Sort Order -->
      <div class="mb-6">
        <label for="sort_order" class="block text-sm font-medium text-gray-900 mb-2">
          <%= t('floors:fields.sortOrder') %> <span class="text-red-600">*</span>
        </label>
        <input
          type="number"
          id="sort_order"
          name="sort_order"
          required
          min="0"
          value="0"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          placeholder="0"
        >
        <p class="mt-1 text-sm text-gray-500">
          <%= t('floors:help.sortOrder') %>
        </p>
      </div>

      <!-- Buttons -->
      <div class="flex gap-4 pt-6 border-t border-gray-200">
        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition-colors"
        >
          <i class="bi bi-check-lg"></i> <%= t('floors:actions.create') %>
        </button>
        <a
          href="/admin/floors"
          class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-2 rounded-lg font-medium transition-colors"
        >
          <i class="bi bi-x-lg"></i> <%= t('common:cancel') %>
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('../../partials/footer') %>
